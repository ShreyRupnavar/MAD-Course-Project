<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral_variant10">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="130dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sign_up_box" />

    <TextView
        android:id="@+id/logintextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="184dp"
        android:layout_marginBottom="21dp"
        android:text="Welcome Back! "
        android:textColor="#FCD722"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/logintextView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/logintextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginBottom="56dp"
        android:text="LOG IN"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/logineditText1"
        app:layout_constraintStart_toStartOf="@+id/logintextView"
        app:layout_constraintTop_toBottomOf="@+id/logintextView" />

    <EditText
        android:id="@+id/logineditText1"
        android:layout_width="229dp"
        android:layout_height="0dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/edittext_round"
        android:drawableLeft="@drawable/email_1_svgrepo_com"
        android:ems="10"
        android:hint="Enter email"
        android:inputType="textEmailAddress"
        android:textAlignment="viewStart"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/logineditText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logintextView2"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/logineditText2"
        android:layout_width="230dp"
        android:layout_height="0dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/edittext_round"
        android:drawableLeft="@drawable/password_minimalistic_svgrepo_com"
        android:ems="10"
        android:hint="Enter password"
        android:inputType="text"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/loginbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logineditText1"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="192dp"
        android:layout_height="48dp"
        android:layout_marginBottom="108dp"
        android:backgroundTint="#FCD722"
        android:text="LOG IN"
        android:textColor="@color/material_dynamic_neutral0"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/loginbutton1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logineditText2" />

    <Button
        android:id="@+id/loginbutton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="63dp"
        android:backgroundTint="#FCD722"
        android:text="DON'T HAVE AN ACCOUNT YET?"
        android:textColor="@color/material_dynamic_neutral0"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginbutton" />
</androidx.constraintlayout.widget.ConstraintLayout>